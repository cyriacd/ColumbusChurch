<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.columbuschurch.columbuschurch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Gallery"
            android:screenOrientation="portrait" />

        <service
            android:name=".ChurchNotification"
            android:exported="false">
            <intent-filter>
                <action android:name="org.columbuschurch.columbuschurch.ChurchNotification" />
            </intent-filter>
        </service>

        <activity android:name=".AboutPage" />
        <activity
            android:name=".Readings"
            android:label="@string/title_activity_readings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.columbuschurch.columbuschurch.MainActivity" />
        </activity>
    </application>

</manifest>
